{
  "name": "@wpt/backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/main.ts",
    "./shared": "./src/shared.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "drizzle-kit": "^0.31.8"
  },
  "scripts": {
    "dev": "bun run --hot ./src/main.ts ",
    "test": "bun --env-file=.env.test.local test --watch",
    "test:c": "bun --env-file=.env.test.local test --concurrent --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:test": "bun --env-file=.env.test.local -- drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:push:test": "bun --env-file=.env.test.local -- drizzle-kit push",
    "db:inspect": "drizzle-kit introspect",
    "db:drop": "drizzle-kit drop"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1",
    "nanoid": "^5.1.6"
  }
}